#!/bin/bash

species=$1
study=$2
sample=$3
nreps=$4
pors=$5

mkdir $species
cd $species
mkdir genome
cd genome
cp ../../../makefiles/Makefile_parse_GFF3_template Makefile
cd ..
mkdir $study
cd $study
mkdir $sample
cd $sample
cp ../../../../makefiles/Makefile_merge"$nreps"_template Makefile
r=0
while [ $r -lt $nreps ]; do
 ((r++))
 mkdir replicate$r
 cd replicate$r
 ln -s ../../../genome
 if [ $pors == "p" ]; then
   cp ../../../../../makefiles/Makefile_WF1-6pe_template Makefile
 else
   cp ../../../../../makefiles/Makefile_WF1-6se_template Makefile
 fi
 cd ..
done
cd ../../..

ls -RC $species
